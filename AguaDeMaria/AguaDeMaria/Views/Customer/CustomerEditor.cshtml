@model AguaDeMaria.Model.Customer
@using (Html.BeginForm("SaveCustomer", "Customer", FormMethod.Post, new { id = "customerEntryForm" }))
{
    <table>
        <tr style="display:none">
            <td></td>
            <td>
                @Html.HiddenFor(x => x.CustomerId)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.CustomerCode)
            </td>
            <td>
                @Html.TextBoxFor(x => x.CustomerCode)
                @Html.ValidationMessageFor(x => x.CustomerCode)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.CustomerName)
            </td>
            <td>
                @Html.TextBoxFor(x => x.CustomerName)
                @Html.ValidationMessageFor(x => x.CustomerName)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.CustomerTypeId)
            </td>
            <td>
                @Html.DropDownListFor(x => x.CustomerTypeId, ViewBag.CustTypeList as IEnumerable<SelectListItem>, new { @id = "customerType" })
                @Html.ValidationMessageFor(x => x.CustomerTypeId)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.Address)
            </td>
            <td>
                @Html.TextBoxFor(x => x.Address)
                @Html.ValidationMessageFor(x => x.Address)
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(x => x.ContactNumbers)
            </td>
            <td>
                @Html.TextBoxFor(x => x.ContactNumbers)
                @Html.ValidationMessageFor(x => x.ContactNumbers)
            </td>
        </tr>
    </table>
}
